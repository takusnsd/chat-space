.side_bar
  .side_bar__user-name
    .side_top__items
      .side_top__items-name 
        ＝ current＿user.name
      .side_top__items-icons
        = link_to new_group_path do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .side_bar__group-list
    - current_user.groups.each do |group|
      .side_middle__items
        = link_to group_messages_path(group) do
          .side_middle__items-name
            = group.name
          .side_middle__items-message
            = group.show_last_message